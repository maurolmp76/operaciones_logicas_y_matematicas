Proceso area_de_un_triangulo
	// Realiza un algoritmo que permita calcular la superficie de un triangulo
	definir b como numerico;
	definir h como numerico;
	definir a como numerico;
	Escribir "Ingrese la base del triangulo";
	Leer b;
	Escribir "Ingrese la altura del triangulo";
	Leer h;
	a = b * h / 2;
	Escribir "El area del triangulo es: " , a;	
FinProceso
